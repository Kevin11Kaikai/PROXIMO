# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Mark notebooks as text (but don't normalize)
*.ipynb text

# Binary files (if using Git LFS, uncomment these)
# *.bin filter=lfs diff=lfs merge=lfs -text
# *.pt filter=lfs diff=lfs merge=lfs -text
# *.pth filter=lfs diff=lfs merge=lfs -text
# *.h5 filter=lfs diff=lfs merge=lfs -text
# *.ckpt filter=lfs diff=lfs merge=lfs -text

# Model files (excluded by default, uncomment if using LFS)
# PsyGUARD-RoBERTa/pytorch_model.bin filter=lfs diff=lfs merge=lfs -text

# Database files (excluded by default)
*.db binary
*.sqlite binary
*.sqlite3 binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.ico binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary
*.7z binary

# Compiled files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary

# OS files
.DS_Store binary
Thumbs.db binary

